
@model FuCommunityWebModels.Models.OrderInfo

@{
    ViewData["Title"] = "VNPAY DEMO PAY";
}

<div class="payment">
    <div class="container my-5">
        <div class="card text-center">
            <div class="card-body">
                <h1 class="card-title">VNPAY DEMO</h1>
                <p class="card-text">Nhập số tiền thanh toán và chọn phương thức thanh toán</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card mt-4" style="max-width: 500px;">
                    <div class="card-body">
                        <h4 class="text-center">Nhập số tiền thanh toán</h4>
                        <form asp-action="Pay" method="post">
                            <div class="form-group mb-3">
                                <label for="Amount">Số tiền (VND):</label>
                                <input type="number" class="form-control" id="Amount" name="Amount"
                                    placeholder="Nhập số tiền cần thanh toán" required />
                            </div>

                            <h4>Chọn phương thức thanh toán:</h4>
                            <div class="d-block my-3">
                                <div class="form-check">
                                    <input type="radio" id="bankcode_Vnbank" name="paymentMethod" value="VNBANK"
                                        class="form-check-input" />
                                    <label class="form-check-label" for="bankcode_Vnbank">ATM-Tài khoản ngân hàng nội địa</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" id="bankcode_Intcard" name="paymentMethod" value="INTCARD"
                                        class="form-check-input" />
                                    <label class="form-check-label" for="bankcode_Intcard">Thanh toán qua thẻ quốc tế</label>
                                </div>

                                <h4>Chọn ngôn ngữ thanh toán:</h4>
                                <div class="form-check">
                                    <input type="radio" id="locale_Vn" name="locale" value="vn" checked class="form-check-input" />
                                    <label class="form-check-label" for="locale_Vn">Tiếng Việt</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" id="locale_En" name="locale" value="en" class="form-check-input" />
                                    <label class="form-check-label" for="locale_En">Tiếng Anh</label>
                                </div>

                                <button type="submit" class="btn-1 w-100 mt-3">Thanh toán (Redirect)</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/bootstrap.min.js"></script>
