@model ForumVM

<body>
    <div class="container forum">
        <h1 class="forum-title">Forum</h1>
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        General
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var category in Model.Categories ?? new List<Category>()) // Kiểm tra nếu Model.Category null
                        {
                            <li class="list-group-item d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="forum-icon me-3"></div>
                                    <a asp-controller="Home" asp-action="Post"
                                       asp-route-CategoryName="@category.CategoryName"
                                       asp-route-CategoryID="@category.CategoryID"
                                        class="text-decoration-none">
                                    <div>
                                        <div>@category.CategoryName</div>
                                        <div class="text-muted">
                                            @category.Description
                                        </div>
                                    </div>
                                    </a>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="text-end me-3">  
                                    </div>
                                    <img class="user-avatar" src="" alt="Alternate Text" />
                                </div>
                            </li>
                        }

                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="news-card-header p-2">
                        News
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var course in Model.Courses.OrderByDescending(c => c.CreatedDate).Take(5))
                        {
                            <li class="list-group-item d-flex align-items-center card-ul">
                                <img src="@course.CourseImage" class="news-img me-3" alt="News">
                                <div>
                                    <div>@course.Title</div>
                                    <div class="text-muted">@course.Description<br>@course.CreatedDate.ToString("HH:mm dd/MM/yyyy")</div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>