<body>
    <div class="contact-us">
        <div class="info-container">
            <div class="row contact-info">
                <div class="col-md-4">
                    <div class="contact-item">
                        <div class="img-container">
                            <i class="fas fa-phone-alt"></i> <!-- Font Awesome phone icon -->
                        </div>
                        <div>
                            <h6>Phone</h6>
                            <span>+ 012 345 678</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="contact-item">
                        <div class="img-container">
                            <i class="fas fa-envelope"></i> <!-- Font Awesome envelope icon -->
                        </div>
                        <div>
                            <h6>Email</h6>
                            <span>Helpfull@gmail.com</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="contact-item">
                        <div class="img-container">
                            <i class="fas fa-map-marker-alt"></i> <!-- Font Awesome map marker icon -->
                        </div>
                        <div>
                            <h6>Location</h6>
                            <span>View on Google Map</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container" id="contact">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <!-- Contact form -->
                    <div class="contact-form">
                        <h2 class="text-center">CONTACT US</h2>
                        <form>
                            <label class="form-label">Leave us a message</label>
                            <div class="row mb-3">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="First Name">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <input type="email" class="form-control" placeholder="Email Address">
                                </div>
                                <div class="col">
                                    <input type="tel" class="form-control" placeholder="Phone Number">
                                </div>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>