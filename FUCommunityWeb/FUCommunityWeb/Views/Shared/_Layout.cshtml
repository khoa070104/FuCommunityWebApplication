<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUCommunityWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FUCommunityWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/Style.css">
    <link rel="stylesheet" href="/js/site.js">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <!-- Brand Logo -->
                <a class="navbar-brand" href="#">
                    <img src="/img/Logo.png" alt="Logo">
                </a>

                <!-- Navbar Toggler for Responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="d-flex flex-column flex-lg-row align-items-lg-center w-100">

                        <!-- Search Container -->
                        <div class="search-container me-lg-3 mb-3 mb-lg-0">
                            <input type="text" id="searchInput" class="form-control" placeholder="Want to search something?"
                                   style="width: 500px; height: 55px; padding-left: 20px; padding-right: 110px;">
                            <button class="btn btn-explore dropdown-toggle" id="exploreBtn" type="button"
                                    data-bs-toggle="dropdown">
                                Explore
                            </button>
                            <ul class="dropdown-menu mega-dropdown" aria-labelledby="exploreDropdown">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6>Type</h6>
                                        <ul class="list-unstyled">
                                            <li><a class="dropdown-item" href="#">All Courses</a></li>
                                            <li><a class="dropdown-item" href="#">Paid Courses</a></li>
                                            <li><a class="dropdown-item" href="#">Free Courses</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-4">
                                        <h6>Category</h6>
                                        <ul class="list-unstyled">
                                            <li>
                                                <strong>Information Technology</strong>
                                                <ul class="list-unstyled">
                                                    <li><a class="dropdown-item" href="#">MAD101</a></li>
                                                    <li><a class="dropdown-item" href="#">MAE101</a></li>
                                                    <li><a class="dropdown-item" href="#">CSI104</a></li>
                                                </ul>
                                            </li>
                                            <li>
                                                <strong>Programming IT</strong>
                                                <ul class="list-unstyled">
                                                    <li><a class="dropdown-item" href="#">PRF192</a></li>
                                                    <li><a class="dropdown-item" href="#">PRO192</a></li>
                                                    <li><a class="dropdown-item" href="#">PRJ301</a></li>
                                                    <li><a class="dropdown-item" href="#">WED201c</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-md-4">
                                        <ul class="list-unstyled">
                                            <li>
                                                <strong>Mathematics</strong>
                                                <ul class="list-unstyled">
                                                    <li><a class="dropdown-item" href="#">MAD101</a></li>
                                                    <li><a class="dropdown-item" href="#">MAE101</a></li>
                                                    <li><a class="dropdown-item" href="#">MAS291</a></li>
                                                </ul>
                                            </li>
                                            <li>
                                                <strong>Language</strong>
                                                <ul class="list-unstyled">
                                                    <li><a class="dropdown-item" href="#">Japanese</a></li>
                                                    <ul class="list-unstyled ms-3">
                                                        <li><a class="dropdown-item" href="#">JPD113</a></li>
                                                        <li><a class="dropdown-item" href="#">JPD123</a></li>
                                                    </ul>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </ul>
                        </div>

                        <!-- Navbar Links -->
                        <ul class="navbar-mid navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Forum</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                        </ul>

                        <!-- Right Aligned Buttons -->
                        <div class="d-flex align-items-center ms-lg-auto btn-right">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-content">
            <div class="column">
                <img src="/img/Logo_FunnyCode.jpg" alt="LOGO">
                <p>Top learning experiences that create more talent in the world.</p>
            </div>
            <div class="column">
                <h4>All subjects</h4>
                <ul>
                    <li><a href="/courses/MAE101">MAE101</a></li>
                    <li><a href="/courses/PRF192">PRF192</a></li>
                    <li><a href="/courses/PRO192">PRO192</a></li>
                    <li><a href="/courses/PRJ301">PRJ301</a></li>
                    <li><a href="/courses/WED201c">WED201c</a></li>
                </ul>
            </div>
            <div class="column">
                <h4>Team</h4>
                <ul>
                    <li><a href="/about">About us</a></li>
                    <li><a href="/contact">Contact us</a></li>
                    <li><a href="/feedback">Feedbacks</a></li>
                </ul>
            </div>
            <div class="column">
                <h4>Social</h4>
                <ul>
                    <li><a href="/forum">Our Forum <span class="new-badge">New</span></a></li>
                    <li><a href="https://www.linkedin.com/" target="_blank">LinkedIn</a></li>
                    <li><a href="https://github.com/" target="_blank">GitHub</a></li>
                    <li><a href="https://twitter.com/" target="_blank">Twitter</a></li>
                </ul>
            </div>
            <div class="column">
                <h4>Settings</h4>
                <ul>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/notifications">Notification</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="footer-bottom-content">
                <p>© 2024 LOGO. All rights reserved.</p>
                <div class="social-icons">
                    <a href="https://twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin"></i></a>
                    <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook"></i></a>
                    <a href="https://github.com/" target="_blank"><i class="fab fa-github"></i></a>
                </div>
            </div>
            <button class="back-to-top"><i class="fas fa-chevron-up"></i></button>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>