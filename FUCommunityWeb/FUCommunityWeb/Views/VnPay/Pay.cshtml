@model FuCommunityWebModels.Models.OrderInfo


@{
    ViewData["Title"] = "VNPAY DEMO PAY";
}

<div class="jumbotron">
    <h1>VNPAY DEMO</h1>
</div>
<div class="container">
    <div class="row">
        <form asp-action="Pay" method="post">
            <div class="col-md-8 order-md-1">
                <h4>Nhập số tiền thanh toán:</h4>
                <div class="form-group">
                    <label for="Amount">Số tiền (VND):</label>
                    <input type="number" class="form-control" id="Amount" name="Amount" placeholder="Nhập số tiền cần thanh toán" required />
                </div>

                <h4>Chọn phương thức thanh toán:</h4>
                <div class="d-block my-3">
                    <h5 class="mb-3">Cách 1: Chuyển hướng sang VNPAY chọn phương thức thanh toán</h5>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="bankcode_Default" name="paymentMethod" value="VNPAYQR" checked class="custom-control-input" />
                        <label class="custom-control-label" for="bankcode_Default">Cổng thanh toán VNPAYQR</label><br />
                    </div>

                    <h5 class="mb-3">Cách 2: Tách phương thức thanh toán tại site của Merchant</h5>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="bankcode_Vnpayqr" name="paymentMethod" value="VNPAYQR" class="custom-control-input" />
                        <label class="custom-control-label" for="bankcode_Vnpayqr">Thanh toán qua ứng dụng hỗ trợ VNPAYQR</label><br />
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="bankcode_Vnbank" name="paymentMethod" value="VNBANK" class="custom-control-input" />
                        <label class="custom-control-label" for="bankcode_Vnbank">ATM-Tài khoản ngân hàng nội địa</label><br />
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="bankcode_Intcard" name="paymentMethod" value="INTCARD" class="custom-control-input" />
                        <label class="custom-control-label" for="bankcode_Intcard">Thanh toán qua thẻ quốc tế</label><br />
                    </div>

                    <h4>Chọn ngôn ngữ thanh toán:</h4>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="locale_Vn" name="locale" value="vn" checked class="custom-control-input" />
                        <label class="custom-control-label" for="locale_Vn">Tiếng Việt</label><br />
                        <input type="radio" id="locale_En" name="locale" value="en" class="custom-control-input" />
                        <label class="custom-control-label" for="locale_En">Tiếng Anh</label><br />
                    </div>

                    <button type="submit" class="btn btn-default">Thanh toán (Redirect)</button>
                </div>
            </div>

        </form>
    </div>

    <p>&nbsp;</p>
    <footer class="footer">
        <p>&copy; VNPAY 2020</p>
    </footer>
</div>
<script src="~/js/bootstrap.min.js"></script>
