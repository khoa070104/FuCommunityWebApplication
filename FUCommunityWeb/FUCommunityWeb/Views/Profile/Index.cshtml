@model UserVM


<div class="container-fluid mt-4 profile">
	<h1 class="title text-start">PROFILE</h1>
	<div class="row justify-content-center">
		<!-- Sidebar -->
		<div class="col-md-3">
			@Html.Partial("Sidebar", Model)
		</div>
		<!-- My Profile Section -->
		<div class="col-md-9">
			<div class="my-profile">
				<h2 class="text-center custom-my-profile mb-4">Edit Profile</h2>
				<form class="profile-form" method="post">
					<div class="row mb-3">
						<div class="col-sm-6">
							<div class="form-group">
								<label for="fullName">Full Name:</label>
								<input asp-for="User.FullName" class="form-control" id="fullName" />
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label for="bio">Bio:</label>
								<input asp-for="User.Bio" class="form-control" id="bio" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-sm-12">
							<div class="form-group">
								<label for="address">Address:</label>
								<input asp-for="User.Address" class="form-control" id="address" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-sm-4">
							<div class="form-group">
								<label for="gender">Gender:</label>
								<select asp-for="User.Gender" class="form-control" id="gender">
									<option value="M" selected="@Model.User.Gender.Equals('M')">Male</option>
									<option value="F" selected="@Model.User.Gender.Equals('F')">Female</option>
								</select>
							</div>
						</div>
						<div class="col-sm-4">
							<div class="form-group">
								<label for="dob">Date of Birth:</label>
								<input asp-for="User.DOB" class="form-control" id="dob" />
							</div>
						</div>
						<div class="col-sm-4">
							<div class="form-group">
								<label for="phone">Phone Number:</label><p style="	background-color: #cfe7de;
																					padding: 10.5px 9px;
																					border-radius: 5px;
																					text-decoration: none;
																					margin-bottom: 0px;">
									<a target="_blank" href="https://zalo.me/@Model.User.PhoneNumber" style="text-decoration: none; color: black;">@Model.User.PhoneNumber</a>
								</p>
								<!--input asp-for="PhoneNumber" class="form-control" id="phone" disabled /-->
								
								<span class="text-custom-light" style="font-size: 10px; margin-left: 12%">Muốn cập nhật Số điện thoại, <a style="text-decoration: none; font-size: 10px;font-weight:bold" href="/Identity/Account/Manage">Click here</a></span>
							</div>
						</div>
					</div>
					<div class="form-group mb-3">
						<label for="description">Description:</label>
						<textarea asp-for="User.Description" class="form-control" id="description"></textarea>
					</div>
					<div>
						<button type="submit" class="btn-savechange">Save Changes</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

