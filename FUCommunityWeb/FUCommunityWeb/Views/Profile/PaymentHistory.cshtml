@model UserVM

<body>
    <div class="container-fluid mt-4 profile">
        <h1 class="title text-start">PROFILE</h1>
        <div class="row justify-content-center">
            <div class="col-md-3">
                @Html.Partial("Sidebar", Model)
            </div>
            <div class="col-md-9">
                <div class="history">
                    <h2 class="text-center custom-header mb-4">Payment History</h2>
                    <div class="table-responsive">
                        <table class="custom-table table-hover">
                            <thead class="custom-table-header">
                                <tr>
                                    <th scope="col">UserName</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">BankCode</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders != null && Model.Orders.Any())
                                {
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr class="custom-row-bg">
                                            <td>@(order.User != null ? order.User.UserName : "Unknown User")</td>
                                            <td>@order.Amount</td>
                                            <td>@order.BankCode</td>
                                            <td>@order.Status</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No data.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
